{
  "name": "kraken",
  "productName": "Kraken",
  "description": "A Discord-like voice chat application",
  "main": "out/main/main.js",
  "private": true,
  "license": "AGPL-3.0-only",
  "version": "0.0.1",
  "author": {
    "name": "Kraken Team",
    "email": "noreply@krakenchat.app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/krakenchat/kraken.git"
  },
  "type": "module",
  "scripts": {
    "clean": "rimraf dist out release",
    "build": "electron-vite build",
    "build:renderer": "vite build",
    "package": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:linux:appimage": "npm run build && electron-builder --linux AppImage",
    "build:linux:deb": "npm run build && electron-builder --linux deb",
    "build:linux:rpm": "npm run build && electron-builder --linux rpm",
    "build:all-platforms": "npm run build && electron-builder --win --linux --mac",
    "release": "npm run build && electron-builder --publish always",
    "docker:build:win": "docker run --rm -v \"$(pwd)\":/project -v ~/.cache/electron:/root/.cache/electron -v ~/.cache/electron-builder:/root/.cache/electron-builder -w /project electronuserland/builder:wine /bin/bash -c 'npm ci && npm run build:win'",
    "docker:build:linux": "docker run --rm -v \"$(pwd)\":/project -v ~/.cache/electron:/root/.cache/electron -v ~/.cache/electron-builder:/root/.cache/electron-builder -w /project electronuserland/builder /bin/bash -c 'npm ci && npm run build:linux'",
    "dev": "vite --host 0.0.0.0",
    "start": "electron-vite preview",
    "electron-dev": "electron-vite dev",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 20",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 20 --fix",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:report": "playwright show-report",
    "test:e2e:docker": "../scripts/run-e2e.sh",
    "test:e2e:docker:all": "../scripts/run-e2e.sh --all",
    "test:e2e:docker:ui": "../scripts/run-e2e.sh --ui",
    "test:e2e:docker:clean": "../scripts/run-e2e.sh --clean"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/roboto": "^5.2.5",
    "@livekit/components-react": "^2.9.9",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "@openobserve/browser-logs": "^0.2.11",
    "@openobserve/browser-rum": "^0.2.11",
    "@reduxjs/toolkit": "^2.7.0",
    "axios": "^1.13.2",
    "date-fns": "^4.1.0",
    "electron-audio-loopback": "^1.0.6",
    "electron-updater": "^6.3.9",
    "hls.js": "^1.6.14",
    "livekit-client": "^2.13.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.5.3",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@playwright/test": "^1.57.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/semver": "^7.7.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3",
    "electron-vite": "^5.0.0",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.4.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.kraken.app",
    "productName": "Kraken",
    "extends": null,
    "files": [
      "out/**/*",
      "package.json"
    ]
  }
}
