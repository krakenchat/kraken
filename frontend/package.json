{
  "name": "kraken",
  "productName": "Kraken",
  "description": "A Discord-like voice chat application",
  "main": "electron/dist/main.cjs",
  "private": true,
  "license": "AGPL-3.0-only",
  "version": "1.0.0",
  "author": {
    "name": "Kraken Team",
    "email": "noreply@krakenchat.app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Msoenn/kraken-chat.git"
  },
  "type": "module",
  "scripts": {
    "clean": "rimraf dist electron/dist release",
    "build": "vite build",
    "build-electron": "tsc --project electron/tsconfig.electron.json && mv electron/dist/main.js electron/dist/main.cjs",
    "build-preload": "tsc electron/preload.ts --outDir electron/dist --module commonjs --target es2020 --esModuleInterop && mv electron/dist/preload.js electron/dist/preload.cjs",
    "build:all": "npm run clean && npm run build && npm run build-electron && npm run build-preload",
    "package": "npm run build:all && electron-builder --dir",
    "build:win": "npm run build:all && electron-builder --win",
    "build:mac": "npm run build:all && electron-builder --mac",
    "build:linux": "npm run build:all && electron-builder --linux",
    "build:linux:appimage": "npm run build:all && electron-builder --linux AppImage",
    "build:linux:deb": "npm run build:all && electron-builder --linux deb",
    "build:linux:rpm": "npm run build:all && electron-builder --linux rpm",
    "build:all-platforms": "npm run build:all && electron-builder --win --linux --mac",
    "release": "npm run build:all && electron-builder --publish always",
    "dev": "vite --host 0.0.0.0",
    "start": "npm run build-electron && npm run build-preload && electron .",
    "electron-dev": "concurrently \"cross-env NODE_ENV=development vite\" \"wait-on http://localhost:5173 && npm run build-electron && npm run build-preload && electron .\"",
    "win-electron-dev": "concurrently \"cross-env NODE_ENV=development vite\" \"wait-on http://localhost:5173 && npm run build-electron && npm run build-preload && cmd.exe /C node_modules/.bin/electron .\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/roboto": "^5.2.5",
    "@livekit/components-react": "^2.9.9",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "@reduxjs/toolkit": "^2.7.0",
    "axios": "^1.9.0",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.3.9",
    "livekit-client": "^2.13.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.5.3",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/semver": "^7.7.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.5",
    "electron-builder": "^24.13.3",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.kraken.app",
    "productName": "Kraken",
    "extends": null,
    "files": [
      "dist/**/*",
      "electron/dist/**/*",
      "package.json"
    ]
  }
}
